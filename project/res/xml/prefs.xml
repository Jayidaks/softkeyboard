<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
        android:title="@string/ime_settings"
        android:key="ime_settings">
        	<PreferenceCategory android:key="ui_group"
            android:title="@string/ui_group">
	            <ListPreference
                android:key="keyboard_layout_change_method"
                android:title="@string/keyboard_layout_change_method_title"
                android:summary="@string/keyboard_layout_change_method_summary"
                android:entries="@array/keyboard_layout_change_methods"
                android:entryValues="@array/keyboard_layout_change_methods_values"
                android:defaultValue=""
                android:dialogTitle="@string/keyboard_layout_change_method_dialog_title"/>
                
	            <CheckBoxPreference
	            android:key="physical_keyboard_change_notification"
	            android:title="@string/physical_keyboard_change_notification"
	            android:persistent="true" 
	            android:defaultValue="true"
	            android:summaryOff=""
	            android:summaryOn="Show notification on physical keyboard change"
	            />
            </PreferenceCategory>
   		 	<PreferenceCategory android:key="effects_group"
            android:title="@string/effects_group">
            <CheckBoxPreference
            android:key="vibrate_on"
            android:title="@string/vibrate_on"
            android:persistent="true"
            android:defaultValue="false"
            android:summaryOn="Short vabration on soft keyboard press."
            android:summaryOff=""
            />
    		<CheckBoxPreference
            android:key="sound_on"
            android:title="@string/sound_on"
            android:persistent="true"
            android:defaultValue="false" 
            android:summaryOn="Sound effects on soft keyboard press. Volume is Notifications volume."
            android:summaryOff=""
            />
            </PreferenceCategory>
            <PreferenceCategory android:key="grammer_group"
            android:title="@string/grammer_group">
            <CheckBoxPreference
            android:key="auto_caps"
            android:title="@string/auto_caps"
            android:persistent="true"
            android:defaultValue="true" 
            />
            <CheckBoxPreference
            android:key="candidates_on"
            android:title="@string/candidates_on"
            android:persistent="true"
            android:defaultValue="true" 
            />
            </PreferenceCategory>
            <PreferenceCategory android:key="keyboards_group"
            android:title="@string/keyboards_group">
            <CheckBoxPreference
            android:key="internet_keyboard"
            android:title="@string/internet_keyboard"
            android:persistent="true" 
            android:defaultValue="true"
            android:summaryOn="Special keyboard layout for URL/E-mail text boxes."
            android:summaryOff=""
            />
            <CheckBoxPreference
            android:key="eng_keyboard"
            android:title="@string/eng_keyboard"
            android:persistent="true" 
            android:defaultValue="true"
            />
            <CheckBoxPreference
            android:key="dvorak_keyboard"
            android:title="@string/dvorak_keyboard"
            android:persistent="true" 
            android:defaultValue="false"
            android:summaryOn="Created with Stephen Paul Weber"
            />
            <CheckBoxPreference
            android:key="heb_keyboard"
            android:title="@string/heb_keyboard"
            android:persistent="true"
            android:defaultValue="true" 
            />
            <!--<CheckBoxPreference
            android:key="arabic_keyboard"
            android:title="@string/arabic_keyboard"
            android:persistent="true"
            android:defaultValue="false" 
            />-->
            <CheckBoxPreference
            android:key="lao_keyboard"
            android:title="@string/lao_keyboard"
            android:persistent="true"
            android:defaultValue="false" 
            />
            <CheckBoxPreference
            android:key="bg_ph_keyboard"
            android:title="@string/bg_ph_keyboard"
            android:persistent="true"
            android:defaultValue="false" 
            android:summaryOn="Created with atg2d"
            />
            <CheckBoxPreference
            android:key="bg_bds_keyboard"
            android:title="@string/bg_bds_keyboard"
            android:persistent="true"
            android:defaultValue="false"
            android:summaryOn="Created with atg2d" 
            />
            </PreferenceCategory>
</PreferenceScreen>