<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
android:title="@string/ime_settings"
android:key="ime_settings">
	<Preference android:key="prefs_title_key" android:selectable="false" android:enabled="false"
	android:persistent="false" 
	android:title="@string/ime_name"
	android:summary="@string/how_to_pointer_version_prefix">
	</Preference>
	<PreferenceCategory android:key="ui_group"
	android:title="@string/ui_group">
		<ListPreference
		android:key="keyboard_layout_change_method"
		android:title="@string/keyboard_layout_change_method_title"
		android:summary="@string/keyboard_layout_change_method_summary"
		android:entries="@array/keyboard_layout_change_methods"
		android:entryValues="@array/keyboard_layout_change_methods_values"
		android:defaultValue=""
		android:dialogTitle="@string/keyboard_layout_change_method_dialog_title"/>	
		<ListPreference
		android:key="physical_keyboard_change_notification_type"
		android:title="@string/physical_keyboard_change_notification_title"
		android:summary="@string/physical_keyboard_change_notification_summary"
		android:entries="@array/physical_keyboard_change_notification_types"
		android:entryValues="@array/physical_keyboard_change_notification_values"
		android:defaultValue=""
		android:dialogTitle="@string/physical_keyboard_change_notification_dialog_title"/>                
		<!-- <CheckBoxPreference
		android:key="lengthy_operations_toast_notification"
		android:title="@string/lengthy_operations_toast_notification"
		android:persistent="true" 
		android:defaultValue="false"
		android:summaryOff=""
		android:summaryOn="@string/lengthy_operations_toast_notification_summary"
		/>-->
	</PreferenceCategory>
	<PreferenceCategory android:key="effects_group" android:title="@string/effects_group">
		<ListPreference
		android:key="vibrate_on_key_press_duration"
		android:title="@string/vibrate_on_key_press_title"
		android:summary="@string/vibrate_on_key_press_summary"
		android:entries="@array/vibrate_on_key_press_types"
		android:entryValues="@array/vibrate_on_key_press_values"
		android:dialogTitle="@string/vibrate_on_key_press_dialog_title"/>
		<CheckBoxPreference
		android:key="sound_on"
		android:title="@string/sound_on"
		android:persistent="true"
		android:defaultValue="false" 
		android:summaryOn="@string/sound_on_summary"
		android:summaryOff=""
		/>		
	</PreferenceCategory>
	<PreferenceScreen android:key="tweaks_group"
		android:title="@string/tweaks_group">
		<CheckBoxPreference
			android:key="use_custom_sound_volume"
			android:title="@string/use_custom_sound_volume"
			android:persistent="true"
			android:defaultValue="false" 
			android:summaryOn="@string/use_custom_sound_volume_on_summary"
			android:summaryOff="@string/use_custom_sound_volume_off_summary"
			android:dependency="sound_on"
		/>
		<com.menny.android.anysoftkeyboard.MySeekBarPreference
			android:key="custom_sound_volume"
			android:title="@string/custom_sound_volume"
			android:dialogTitle="@string/custom_sound_volume"
			android:persistent="true"
			android:defaultValue="50"
			android:max="100"
			android:dependency="use_custom_sound_volume"
		/>
		<CheckBoxPreference
			android:key="emoticon_long_press_opens_popup"
			android:title="@string/emoticon_long_press_opens_popup"
			android:persistent="true"
			android:defaultValue="true" 
			android:summaryOn="@string/emoticon_long_press_opens_popup_on_summary"
			android:summaryOff="@string/emoticon_long_press_opens_popup_off_summary"
		/>
		<EditTextPreference android:key="default_smiley_text" 
		android:lines="1" android:singleLine="true" android:autoText="false" android:capitalize="none"
		android:title="@string/default_smiley_text" android:dialogTitle="@string/default_smiley_text" android:persistent="true"
		android:defaultValue=":-) "
		/>
		<EditTextPreference android:key="default_domain_text" 
		android:lines="1" android:singleLine="true" android:autoText="false" android:capitalize="none"
		android:title="@string/default_domain_text" android:dialogTitle="@string/default_domain_text" android:persistent="true"
		android:defaultValue=".com"
		/>
		<!-- @/.com selection -->
	</PreferenceScreen>
